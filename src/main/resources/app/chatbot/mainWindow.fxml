<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnchor" prefHeight="484.0" prefWidth="343.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.chatbot.MainWindow">
    <children>
        <AnchorPane prefHeight="484.0" prefWidth="343.0"
                    style="-fx-background-color: #FFFFFF; -fx-border-color: #989898;">
            <children>
                <TextField fx:id="messageField" layoutX="15.0" layoutY="432.0" prefHeight="42.0" prefWidth="314.0"
                           promptText="Сообщение">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <ImageView fx:id="sendMessage" fitHeight="28.0" fitWidth="28.0" layoutX="294.0" layoutY="439.0"
                           onMouseClicked="#send" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/sent.png"/>
                    </image>
                </ImageView>
                <TextArea fx:id="textArea" editable="false" layoutX="9.0" layoutY="36.0" prefHeight="387.0"
                          prefWidth="323.0" wrapText="true">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </TextArea>
                <ImageView fitHeight="21.0" fitWidth="28.0" layoutX="11.0" layoutY="8.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../image/menu.png"/>
                    </image>
                </ImageView>
                <Label layoutX="48.0" layoutY="8.0" text="Ева" textFill="#838282">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="21.0" fitWidth="21.0" layoutX="312.0" layoutY="9.0" onMouseClicked="#close"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/close.png"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
